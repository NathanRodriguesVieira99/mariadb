{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["ES2023"],
    "module": "node16",
    "rootDir": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"],
  "exclude": ["build", "node_modules", "eslint.config.js"]
}
